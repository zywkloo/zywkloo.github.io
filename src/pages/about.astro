<style>
	.about-page {
		padding: 4rem 0;
	}

	.container {
		max-width: 800px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.about-profile-image {
		width: 200px;
		height: 200px;
		border-radius: 50%;
		margin: 0 auto 2rem;
		display: block;
		border: 5px solid #667eea;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		color: #667eea;
		text-align: center;
	}

	h2 {
		font-size: 1.875rem;
		margin-top: 3rem;
		margin-bottom: 1rem;
		color: #667eea;
	}

	p {
		font-size: 1.125rem;
		line-height: 1.8;
		margin-bottom: 1.5rem;
		color: #2d3748;
	}

	ul {
		font-size: 1.125rem;
		line-height: 1.8;
		margin-bottom: 2rem;
		padding-left: 2rem;
	}

	ul li {
		margin-bottom: 0.5rem;
		color: #2d3748;
	}

	.tech-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		margin-top: 2rem;
	}

	@media (min-width: 768px) {
		.tech-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (min-width: 1024px) {
		.tech-grid {
			grid-template-columns: repeat(4, 1fr);
		}
	}

	.tech-category {
		background: #f8f9fa;
		padding: 1.5rem;
		border-radius: 0.5rem;
	}

	.tech-category h3 {
		font-size: 1.25rem;
		margin-bottom: 1rem;
		color: #667eea;
	}

	.tech-category ul {
		list-style: none;
		padding: 0;
	}

	.tech-category li {
		padding: 0.5rem 0;
		border-bottom: 1px solid #e2e8f0;
	}

	.tech-category li:last-child {
		border-bottom: none;
	}

	.experience-item {
		margin-bottom: 2rem;
		padding: 1.5rem;
		background: #f8f9fa;
		border-radius: 0.5rem;
		border-left: 4px solid #667eea;
	}

	.experience-item h3 {
		font-size: 1.25rem;
		margin-bottom: 0.5rem;
		color: #667eea;
	}

	.experience-date {
		font-size: 0.875rem;
		color: #718096;
		margin-bottom: 1rem;
		font-style: italic;
	}

	.experience-item ul {
		margin-bottom: 0;
	}
</style>